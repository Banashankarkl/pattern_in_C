//sample input: 5
//sample output:
//1 2 3 4 5
//2 3 4 5 4
//3 4 5 4 3
//4 5 4 3 2
//5 4 3 2 1

//code:
int main()
{
   int i,n,j,c;
 
   printf("enter n vlue:\n");
   scanf("%d",&n);
   for(i=0;i<n;i++)
   {
       for(j=0;j<n;j++)
       {
           c=j+i+1;
           if(c<=n)
           {
             printf("%d ",c);
           }
           else
           printf("%d ",(2*n)-c);
       }
       printf("\n");
   }

    return 0;
}

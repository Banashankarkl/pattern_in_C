sample input: 5
sample output:
1        1
12      21
123    321
1234  4321
1234554321


code:
#include <stdio.h>
int main()
{
  char c;
  int i,j;
  scanf("%c",&c);
  for(i=0;i<5;i++)
  {
    for(j=0;j<(5);j++)
    {
      if(j<=i)
      printf("%d",j+1);
      else
      printf(" ");
    }
    for(j=0;j<5;j++)
    {
      if(j<4-i)
      printf(" ");
      else
        printf("%d",5-j);

    }
    printf("\n");
  }
  return 0;
 }
